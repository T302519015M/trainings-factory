{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Training Factory</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="{{ path('homepage') }}">Home</a></li>
                <li><a href="{{path('traininglist')}}">training</a></li>
                <li><a href="#">lessen</a></li>
                <li class="active"><a href="{{ path('list_trainer') }}">trainers</a></li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid training-box">

        {%  for msg in app.session.flashBag.get('trainer-success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>

        {%  endfor %}

        {%  for msg in app.session.flashBag.get('deleted-success') %}
            <div class="alert alert-success">
                {{ msg }}
            </div>

        {% endfor %}

        <div class="row meta-data">
            <div class="col-sm-1">
                ID
            </div>
            <div class="col-sm-1">
                login
            </div>
            {#<div class="col-sm-1">#}
                {#password#}
            {#</div>#}
            <div class="col-sm-1">
                first name
            </div>
            {#<div class="col-sm-1">#}
                {#prefix#}
            {#</div>#}
            <div class="col-sm-1">
                last name
            </div>
            {#<div class="col-sm-1">#}
                {#date Of Birth#}
            {#</div>#}
            <div class="col-sm-1">
                gender
            </div>
            <div class="col-sm-1">
                email
            </div>
            <div class="col-sm-1">
                role
            </div>
            {#<div class="col-sm-1">#}
                {#hire date#}
            {#</div>#}
            <div class="col-sm-1">
                salary
            </div>
            <div class="col-sm-1">
                street
            </div>
            <div class="col-sm-1">
                postal code
            </div>
            <div class="col-sm-1">
                place
            </div>
            <div class="col-sm-1">
                options
            </div>
        </div>
        {% for person in persons %}
            <div class="row">
                <div class="col-sm-1">
                    {{ person.id }}
                </div>
                <div class="col-sm-1">
                    {{ person.loginName }}
                </div>
                {#<div class="col-sm-1">#}
                    {#{{ person.password  }}#}
                {#</div>#}
                <div class="col-sm-1">
                    {{person.firstName}}
                </div>
                {#<div class="col-sm-1">#}
                    {#{{person.prefix}}#}
                {#</div>#}
                <div class="col-sm-1">
                    {{person.lastName}}
                </div>
                {#<div class="col-sm-1">#}
                    {#disabled#}{#{{person.dateOfBirth}}#}
                {#</div>#}
                <div class="col-sm-1">
                    {{person.gender}}
                </div>
                <div class="col-sm-1">
                    {{person.email}}
                </div>
                <div class="col-sm-1">
                    {{person.role}}
                </div>
                {#<div class="col-sm-1">#}
                    {#disabled#}{#{{person.hire_date}}#}
                {#</div>#}
                <div class="col-sm-1">
                    {{person.salary}}
                </div>
                <div class="col-sm-1">
                    {{person.street}}
                </div>
                <div class="col-sm-1">
                    {{person.getPostalCode()}}
                </div>
                <div class="col-sm-1">
                    {{person.place}}
                </div>
                <div class="col-sm-1">
                    <span>
                        <a title="Edit" href="{{ path('update_trainer',{id:person.id}) }}"><i class="fas fa-pen"></i></a>
                    </span>
                    <span>
                       <a  title="Delete" href="{{ path('delete_trainer',{id:person.id}) }}"> <i class="fas fa-trash-alt"></i></a>
                    </span>
                </div>
            </div>

        {% endfor %}
        <div class="add-button">
            <button class="btn btn-primary">
                <a href="{{path('add_trainer')}}"><i class="fas fa-plus"></i> Add trainer</a>
            </button>
        </div>
    </div>

{% endblock %}


{% block stylesheets %}
    <style>
        .training-box{
            margin-top:8rem;
        }

        .meta-data{
            font-weight: 900;
            font-size: 16px;
            border-bottom: #3c3c3c 1px solid;
            margin-bottom: 0.5rem;
        }

        span{
            margin-right: 0.5rem;
        }

        .add-button {
            margin-top:2rem;
        }
        .add-button a {
            color:white;
            text-decoration: none;
        }

    </style>
{% endblock %}
